<Page x:Name="InstructionPage" x:Class="FileRenamer.InstructionsPage"
	  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	  xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
	  xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
	  mc:Ignorable="d" 
	  d:DesignHeight="640" d:DesignWidth="360"
	Title="InstructionsPage" Width="640" Height="360">

	<Grid x:Name="grdMainGrid" Width="640" Height="360">
		<Grid.Background>
			<ImageBrush ImageSource="images/carbonCrysis.jpg" Stretch="None"/>
		</Grid.Background>
		<Border x:Name="brdFrame" BorderThickness="20" HorizontalAlignment="Left" Height="360" Margin="0" VerticalAlignment="Top" Width="640">
			<Border.BorderBrush>
				<ImageBrush ImageSource="images/Brushed-metal-240x180.jpg"/>
			</Border.BorderBrush>
			<TextBlock TextWrapping="Wrap" Text="Instructions:" Margin="40,40,180,40" FontFamily="Vani" IsManipulationEnabled="True" ScrollViewer.CanContentScroll="True">
				<TextBlock.BindingGroup>
					<BindingGroup/>
				</TextBlock.BindingGroup>
				<TextBlock.Background>
					<ImageBrush ImageSource="images/Brushed-metal-240x180.jpg"/>
				</TextBlock.Background>
			</TextBlock>
			
		</Border>
		<Button x:Name="btnClose" Content="Close" HorizontalAlignment="Left" Margin="506,273,0,0" VerticalAlignment="Top" Width="75" FontFamily="Vani" FontSize="14"/>

	</Grid>
</Page>
